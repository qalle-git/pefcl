{
  "name": "server-and-client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "setup": "yarn install",
    "dev": "yarn concurrently \"yarn nodemon\" \"node ./scripts/watch_server.js\"",
    "dev:ingame": "yarn build:ingame && yarn concurrently \"node ./scripts/watch_client.js\" \"node ./scripts/watch_server.js --mode=ingame\"",
    "dev:mobile": "yarn dev",
    "build": "node ./scripts/build_server.js && node ./scripts/build_client.js",
    "build:ingame": "node ./scripts/build_server.js && node ./scripts/build_client.js",
    "lint": "eslint server && eslint client",
    "watch": "concurrently \"yarn watch:server\" \"yarn watch:client\"",
    "watch:client": "esbuild client/client.ts --bundle --target=es6 --watch --outfile=dist/client.js",
    "watch:server": "node scripts/watch_server.js",
    "test": "NODE_ENV=test yarn jest --silent",
    "test:watch": "NODE_ENV=test yarn jest --watch",
    "tsc": "yarn tsc:client && yarn tsc:server",
    "tsc:client": "tsc --project client/tsconfig.json",
    "tsc:server": "tsc --project server/tsconfig.json"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.18",
    "@citizenfx/client": "^2.0.5208-1",
    "@citizenfx/server": "^2.0.5208-1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.8",
    "@types/reflect-metadata": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "esbuild-node-tsc": "^1.8.3",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.15",
    "remove-files-webpack-plugin": "^1.5.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@project-error/npwd-types": "^1.3.4",
    "@project-error/pe-utils": "^0.2.7",
    "body-parser": "^1.19.2",
    "dayjs": "^1.10.8",
    "esbuild": "^0.14.25",
    "eslint": "^8.11.0",
    "i18next": "^21.9.1",
    "logform": "^2.3.2",
    "mysql2": "^2.3.3",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.17.0",
    "tedious": "^14.3.0",
    "tsyringe": "^4.6.0",
    "winston": "^3.4.0"
  }
}
