{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": ["ES2017"],
    "allowJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "types": ["@citizenfx/client", "@types/node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@typings/*": ["../../typings/*"],
      "@locales/*": ["../../locales/*"]
    }
  },
  "include": ["./**/*", "../../typings/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}